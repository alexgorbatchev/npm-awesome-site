article
  header
    h2(class=post.npm && 'npm' || 'article')
      a(href="#{post.url}")= preparedTitle(post)

    .meta
      span posted by !{by()} on #{moment(post.date).format("MMMM Do YYYY")}
      a.comments(href="#{fullUrl(post)}#disqus_thread")

      - if(post.npm)
        .github-stars(data-github-repo=post.npm.repo)

    .social(data-url=fullUrl(post))
      //- .fb-like(data-href="#{fullUrl(post)}/" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false")
      //- a.twitter-share-button(href="https://twitter.com/share" data-url="#{fullUrl(post)}" data-via="alexgorbatchev" data-hashtags="nodejs") Tweet
      //- .g-plusone(data-size="medium" data-href="#{fullUrl(post)}")

  .content
    if post.partner
      != partial(post.partner)

    != isPreview && getPreview(post) || post.contentRenderedWithoutLayouts
