head
  link(rel="alternate" title="RSS" type="application/rss+xml" href="http://feeds.feedburner.com/npmawesome")
  link(rel="stylesheet" type="text/css" media="all" href="/styles.css")
  meta(name="viewport" content="initial-scale=1, maximum-scale=1")
  meta(charset="utf-8")

  title= pageTitle()

  if document.title
    //- all other pages
    meta(property="og:title" content=document.title)
  else
    //- index page
    meta(property="og:image" content=document.image || "/images/posts/npm.png")

  meta(property="og:updated_time" content=(document.meta.date || getCollection('posts').at(0).get('date')).valueOf())
  meta(property="og:site_name" content=site.title)
  meta(property="og:type" content="blog")
  meta(property="og:url" content=fullUrl())

  meta(name="description" content=document.description || site.description)
  meta(property="og:description" content=document.description || site.description)
body
  .container
    .row
      h1#logo: a(href="/") npm awesome
      #sub-title
        | <a href="http://npmjs.org">npm</a> picks, old and new by <a href="https://github.com/alexgorbatchev">Alex Gorbatchev</a>
        p: a(href="http://feeds.feedburner.com/npmawesome"): img(src="/images/feed.gif")

    .row
      .main.col
        block content
          != content
      //- .sidebar.col
      //-   iframe(src="http://githubbadge.appspot.com/alexgorbatchev" style="border: 0;height: 142px;width: 200px;overflow: hidden;" frameBorder="0")

  a#fork-me(href="https://github.com/alexgorbatchev/npm-awesome-site") Fork Me

